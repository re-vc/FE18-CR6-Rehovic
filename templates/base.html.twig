<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}{% endblock %}
		<style>
			.myCover {
				height: 100%;
				width: 100%;
				background-color: rgba(255, 255, 255, 0.5);
				box-shadow: 0 0 50px rgba(255, 255, 255, 1) inset;
			}
			.myCover:hover {
				background-color: rgba(255, 255, 255, 0.333);
				box-shadow: 0 0 50px rgba(255, 255, 255, 0.5) inset;
			}
			.myMin-height {
				min-height: 20rem;
			}
			@media(min-width: 1400px) {
				.col-c-4 {
					width: 33.333%;
				}
			}
		</style>
	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container">
				<a class="navbar-brand" href="/">EventManager</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Events</a>
						</li>
						<li>
							<a class="nav-link" href="{{ path('app_events_new') }}">Create</a>
						</li>
						{# make the filter option exclusive #}
						{% if app.request.attributes.get('_route') in ['app_homepage', 'app_events_index'] or app.request.getRequestUri == '/' %}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Filter
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('app_events_index', {'type': ''}) }}">All</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_events_index', {'type': 'music'}) }}">Music</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_events_index', {'type': 'sports'}) }}">Sports</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_events_index', {'type': 'poetry'}) }}">Poetry</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_events_index', {'type': 'art'}) }}">Art</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_events_index', {'type': 'expression'}) }}">Expression</a>
								</li>
							</ul>
						</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		<div class="container-fluid"> {% block body %}{% endblock %}
			</div>
			<footer class="bg-dark text-light text-center py-2 w-100 mt-3">
				<h6 class="display-5 fs-5">EventManager Rehovic 2023</h6>
			</footer>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
		</body>
	</html>
