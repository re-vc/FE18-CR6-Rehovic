{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}
{% endblock %}

{% block body %}
    {# idea here was sort of a hero, but on very large screens it looks kind of odd. #}
	<div class="rounded-3 mt-3" style="background-image: url( {{ event.image }} ); background-size: cover; background-position: center; background-repeat: no-repeat;">
        <div class="py-2 px-5 myCover myMin-height d-flex align-items-center" style="pointer-events: none">
            <h2 class="display-1 text-light fw-bold bg-dark p-2 px-4">{{ event.name }}</h2>
        </div>
    </div>
	
	<div class="accordion accordion-flush my-3" id="accordionFlushExample">
		<div class="accordion-item">
			<h2 class="accordion-header">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
					Description
				</button>
			</h2>
			<div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
				<div class="accordion-body">
					<p>{{ event.description }}</p>
				</div>
			</div>
		</div>
		<div class="accordion-item">
			<h2 class="accordion-header">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
					Details
				</button>
			</h2>
			<div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
				<div class="accordion-body">
					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ event.id }}</td>
							</tr>
							<tr>
								<th>Date</th>
								<td>{{ event.date ? event.date|date('Y/m/d H:i') : '' }}</td>
							</tr>
							<tr>
								<th>Capacity</th>
								<td>{{ event.capacity }}</td>
							</tr>
							<tr>
								<th>Contact_email</th>
								<td>{{ event.contactEmail }}</td>
							</tr>
							<tr>
								<th>Contact_phone</th>
								<td>{{ event.contactPhone }}</td>
							</tr>
							<tr>
								<th>Location</th>
								<td>{{ event.location }}</td>
							</tr>
							<tr>
								<th>Url</th>
								<td>{{ event.url }}</td>
							</tr>
							<tr>
								<th>Type</th>
								<td>{{ event.type }}</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<div class="d-flex">
		<a class="btn btn-dark" href="{{ path('app_events_index') }}">back to list</a>
		<a class="btn btn-outline-dark mx-2" href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>
		{{ include('events/_delete_form.html.twig') }}
	</div>

{% endblock %}
